{% extends ':event/sponsor:base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <h1>{{ 'QR Codes'|trans }} : {{ event.title }} - {{ sponsorTicket.company }}</h1>
            <h2 class="h3-like">{% trans %}SCANNEUR DE QR CODES{% endtrans %}</h2>
            <a class="button" href="{{ url('sponsor_scan_new', {eventSlug: event.path}) }}">Scanner un QR Code</a>

            <h2 class="h3-like">{% trans %}QR Codes scannés{% endtrans %}</h2>
            <a class="button button__medium" href="#">Télécharger en CSV</a>

            <dl>
                {% for scan in scans %}
                    <dt><strong>{{ scan.prenom }} {{ scan.nom }}</strong></dt>
                    <dd class="mbs">
                        {{ scan.email }}<br />
                        {{ scan.created_on|date('d/m/y H:i')}} - <a href="#">Supprimer</a>
                    </dd>
                {% endfor %}
            </dl>
        </div>
    </div>
{% endblock %}